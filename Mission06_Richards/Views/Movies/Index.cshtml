@{
}
@model List<Mission06_Richards.Models.Movie>

<h2>Movie List</h2>

<a asp-action="Add">Add New Movie</a>

<table>
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Year</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Category</td>
            <td>@movie.Year</td>
        </tr>
    }
</table>
