@model Mission06_Richards.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h2>Edit Movie</h2>

<form asp-action="Edit" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="MovieID" />

    <!-- Category Dropdown -->
    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="CategoryID"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName", Model.CategoryID))">
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>>
    </div>

    <!-- Title -->
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Year -->
    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Director -->
    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Rating -->
    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            <option value="">Select Rating</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Edited -->
    <div class="form-check mb-3">
        <input asp-for="Edited" class="form-check-input" />
        <label asp-for="Edited" class="form-check-label"></label>
    </div>

    <!-- CopiedToPlex -->
    <div class="form-check mb-3">
        <input asp-for="CopiedToPlex" class="form-check-input" />
        <label asp-for="CopiedToPlex" class="form-check-label"></label>
    </div>

    <!-- Lent To -->
    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <!-- Notes -->
    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>

</form>