
@{
}
@model Mission06_Richards.Models.Movie

<h2 class="text-danger">Confirm Delete</h2>

<h4>Are you sure you want to delete this movie?</h4>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.CategoryID</dd>

        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Director</dt>
        <dd class="col-sm-9">@Model.Director</dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.Rating</dd>

        <dt class="col-sm-3">Edited</dt>
        <dd class="col-sm-9">@((Model.Edited) ? "Yes" : "No")</dd>

        <dt class="col-sm-3">Copied To Plex</dt>
        <dd class="col-sm-9">@((Model.CopiedToPlex) ? "Yes" : "No")</dd>

        <dt class="col-sm-3">Lent To</dt>
        <dd class="col-sm-9">@Model.LentTo</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MovieID" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Table" asp-controller="Movies" class="btn btn-secondary">Cancel</a>
</form>